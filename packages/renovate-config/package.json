{
  "name": "@rambler-tech/renovate-config",
  "version": "0.1.0",
  "main": "default.json",
  "license": "MIT",
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "renovate-config": {
    "default": {
      "minimumReleaseAge": "3 days",
      "reviewersFromCodeOwners": true,
      "packageRules": [
        {
          "matchUpdateTypes": [
            "patch"
          ],
          "addLabels": [
            "dependencies",
            "patch"
          ]
        },
        {
          "matchUpdateTypes": [
            "minor"
          ],
          "addLabels": [
            "dependencies",
            "minor"
          ]
        },
        {
          "matchUpdateTypes": [
            "major"
          ],
          "addLabels": [
            "dependencies",
            "major"
          ]
        }
      ]
    },
    "automerge": {
      "packageRules": [
        {
          "matchUpdateTypes": [
            "patch"
          ],
          "automerge": true
        },
        {
          "matchUpdateTypes": [
            "minor"
          ],
          "automerge": true
        }
      ]
    }
  }
}
